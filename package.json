{
  "name": "nextjs-boilerplate",
  "private": true,
  "scripts": {
    "build": "scripty",
    "start": "scripty",
    "setup": "scripty",
    "ngrok": "scripty",
    "dev": "scripty",
    "refresh": "scripty",
    "postinstall": "scripty"
  },
  "scripty": {
    "silent": true
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{png,jpg,jpeg,gif}": [
      "imagemin-lint-staged"
    ],
    "*.svg": [
      "svgo"
    ],
    "*.md": [
      "prettier --write"
    ],
    "*.json": [
      "jsonlint",
      "prettier --write"
    ]
  },
  "dependencies": {
    "next": "^12.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "scripty": "^2.1.1",
    "styled-components": "^5.3.5",
    "styled-reset": "^4.4.2"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^12.2.5",
    "@types/node": "^18.7.14",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "babel-plugin-styled-components": "^2.0.7",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "imagemin-lint-staged": "^0.5.1",
    "jsonlint": "^1.6.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "svgo": "^2.8.0",
    "typescript": "^4.8.2"
  }
}
