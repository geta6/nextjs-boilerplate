{
  "name": "nextjs-boilerplate",
  "private": true,
  "scripts": {
    "build": "scripty",
    "start": "scripty",
    "setup": "scripty",
    "ngrok": "scripty",
    "dev": "scripty",
    "refresh": "scripty",
    "postinstall": "scripty"
  },
  "scripty": {
    "silent": true
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{png,jpg,jpeg,gif}": [
      "imagemin-lint-staged"
    ],
    "*.svg": [
      "svgo"
    ],
    "*.md": [
      "prettier --write"
    ],
    "*.json": [
      "jsonlint",
      "prettier --write"
    ]
  },
  "dependencies": {
    "next": "^12.1.5",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "scripty": "^2.1.0",
    "styled-components": "^5.3.5",
    "styled-reset": "^4.3.4"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^12.1.5",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.30",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "babel-plugin-styled-components": "^2.0.7",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "imagemin-lint-staged": "^0.4.0",
    "jest": "^28.0.2",
    "jsonlint": "^1.6.3",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "svgo": "^2.8.0",
    "typescript": "^4.6.4"
  }
}
